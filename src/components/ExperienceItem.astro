---
interface Props {
  title: string;
  description: string;
  date: string;
}

const { title, description, date } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-gray-700 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-200"
>
</div>
<time
  class="mb-1 text-sm font-normal leading-none dark:text-white/80"
  >{date}</time
>
<h3 class="text-lg font-semibold text-fuchsia-400">
  {title}
</h3>
<p class="mb-4 text-base font-normal dark:text-gray-200 text-pretty">
  {description}
</p>
